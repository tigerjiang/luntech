<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >
    <ImageView
        android:id="@+id/module_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/categore_app_1_bg" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
         >
        <ImageView
            android:id="@+id/module_icon"
            android:layout_width="108px"
            android:layout_height="103px"
            android:layout_marginTop="@dimen/global_category_app_logo_margin_top"
            />

        <TextView
            android:id="@+id/module_label"
            android:layout_width="match_parent"
            android:layout_height="@dimen/global_category_app_shadow_height"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:text="@string/categore_app_1_label"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/global_text_size_large"
            />
    </LinearLayout>


</RelativeLayout>