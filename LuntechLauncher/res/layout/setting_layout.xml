<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/setting_unfold_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/setting_bg"
    android:clickable="false"
    android:focusable="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90px"
        android:layout_marginRight="90px"
        android:layout_gravity="center"
        android:clickable="false"
        android:weightSum="6"
        android:focusable="false"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/setting_general"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/focus_selector"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onClick_Event"
            android:scaleType="fitXY"
            android:src="@drawable/setting_general" />

        <ImageView
            android:id="@+id/setting_about"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5px"
            android:background="@drawable/focus_selector"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onClick_Event"
            android:scaleType="fitXY"
            android:src="@drawable/setting_about" />

        <ImageView
            android:id="@+id/setting_net"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5px"
            android:background="@drawable/focus_selector"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onClick_Event"
            android:scaleType="fitXY"
            android:src="@drawable/setting_net" />


        <ImageView
            android:id="@+id/setting_update"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/focus_selector"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onClick_Event"
            android:scaleType="fitXY"
            android:src="@drawable/setting_update" />

        <ImageView
            android:id="@+id/setting_more"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5px"
            android:background="@drawable/focus_selector"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onClick_Event"
            android:scaleType="fitXY"
            android:src="@drawable/setting_more" />

        <ImageView
            android:id="@+id/setting_qr"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5px"
            android:background="@drawable/focus_selector"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onClick_Event"
            android:scaleType="fitXY"
            android:src="@drawable/setting_qr" />
    </LinearLayout>

</LinearLayout>