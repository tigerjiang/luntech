<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/setting_unfold_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="false"
    android:focusable="false"
    android:orientation="vertical"
    android:visibility="gone">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3px"
        android:layout_marginTop="31px"
        android:clickable="false"
        android:focusable="false"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/setting_base"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2px"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onClick_Event"
            android:scaleType="matrix" />

        <ImageView
            android:id="@+id/setting_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4px"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onClick_Event"
            android:scaleType="matrix" />

        <ImageView
            android:id="@+id/setting_net"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4px"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onClick_Event"
            android:scaleType="matrix" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3px"
        android:layout_marginTop="3px"
        android:clickable="false"
        android:focusable="false"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/setting_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2px"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onClick_Event"
            android:scaleType="fitStart" />

        <ImageView
            android:id="@+id/setting_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4px"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onClick_Event"
            android:scaleType="matrix" />

        <ImageView
            android:id="@+id/setting_erwei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4px"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onClick_Event"
            android:scaleType="matrix" />

    </LinearLayout>

</LinearLayout>